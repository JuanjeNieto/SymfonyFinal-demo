{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<style>
    .carousel-item {
        text-align: center;
    }

    .carousel-img {
        width: 100%;
        height: 600px; /* Ajusta la altura deseada */
        object-fit: cover;
    }
</style>

<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('images/image1.jpg') }}" class="d-block carousel-img" alt="Image 1">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('images/image2.jpg') }}" class="d-block carousel-img" alt="Image 2">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('images/image3.jpg') }}" class="d-block carousel-img" alt="Image 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="mt-4">
        <h2>¡Bienvenido al Dashboard!</h2>
        <p>¡Por favor, disfruta!</p>
        <a href="{{ path('app_song_index') }}" class="btn btn-primary">Songs</a>
        {# <a href="{{ path('app_register') }}" class="btn btn-primary">Registrar</a> #}
    </div>
</div>
{% endblock %}
